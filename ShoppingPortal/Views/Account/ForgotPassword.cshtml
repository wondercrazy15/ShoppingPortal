@model ShoppingPortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Forgot Password</h1>
                        <div class="mb-10px text-left">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                            <div class="text-left mb-10">
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        
                        <div>
                            <input type="submit" value="Get Email Link" class="btn btn-primary submit m0" />
                            <a class="reset_pass" href="Login">Log In</a>
                        </div>

                        <div class="clearfix"></div>



                    }
                </section>
            </div>
        </div>
    </div>

